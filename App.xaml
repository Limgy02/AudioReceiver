<Application x:Class="AudioReceiver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AudioReceiver"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Content" Value=""/>
        </Style>

        <Style x:Key="DefaultComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style x:Key="Divider" TargetType="Rectangle">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Fill" Value="LightGray"/>
            <Setter Property="Margin" Value="10 0 10 0"/>
        </Style>
    </Application.Resources>
</Application>
